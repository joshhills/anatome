<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:background="@color/heart_main_bg">

        <View
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/circleView"
            android:layout_gravity="center"
            android:background="@drawable/circle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/textView3"
            android:layout_gravity="center"
            android:textColor="@color/heart_accent_text"
            android:textSize="70dp"
            android:textIsSelectable="false"
            />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton"
            android:layout_gravity="left|top"
            android:src="@drawable/back_arrow"
            android:background="@color/heart_main_bg"
            />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a deep breath in..."
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textIsSelectable="true"
        android:layout_marginBottom="20dp"
        android:background="@color/heart_main_bg"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/heart_button_panel_bg">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="START"
            android:id="@+id/buttonStart"
            android:background="@color/heart_button_bg"
            android:singleLine="false"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="30dp"
            android:textColor="@color/heart_main_text"
            android:onClick="startButtonOnClick" />


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="STOP"
            android:id="@+id/buttonStop"
            android:background="@color/heart_button_bg"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="30dp"
            android:textColor="@color/heart_main_text"
            android:onClick="stopButtonOnClick"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Follow the steps above when you are feeling stressed"
        android:id="@+id/textView2"
        android:background="@color/heart_secondary_bg"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textAlignment="center"
        android:typeface="normal"
        android:paddingTop="10dp" />

</LinearLayout>